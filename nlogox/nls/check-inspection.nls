; globals [
;   inspect-tmin
;   inspect-tmax
;   inspect-prec
; ]

to-report check-inspection
  let test (sentence inspect-tmin inspect-tmax inspect-prec)

  ifelse ((length filter [i -> i = true] test) > 1) [
    user-message "Please select only one climate variable to inspect."

    report false
  ] [
    if ((length filter [i -> i = true] test) = 1) [
      set inspection true
    ]

    report true
  ]
end
